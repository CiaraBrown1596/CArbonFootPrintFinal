<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carbonfootprinttrackerfinal.FuelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/app_logofuel"
            android:src="@drawable/ic"
            android:cropToPadding="true"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <Spinner
            android:id="@+id/veh_Spinner"
            android:layout_margin="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/fuelType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="textPersonName"
            android:hint="type"/>

        <EditText
            android:id="@+id/fuelPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="textPersonName"
            android:hint="Price"/>

        <EditText
            android:id="@+id/fuelDate"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="date"/>

        <EditText
            android:id="@+id/fuelAmount"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="amount liters"/>


        <Button
            android:id="@+id/button4"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:text="Submit"/>
    </LinearLayout>
</RelativeLayout>